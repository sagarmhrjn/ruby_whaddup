<h2 class="ui center aligned medium icon header">
  <i class="circular red user secret icon"></i>
  Say something
</h2>


<div class="ui two column grid">
    <div class="twelve wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content" id="messages">
                <div class="ui feed" id="message-container">
                    <%= render @messages %>
                </div>
            </div>
            <div class="extra content">
                <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path, remote: true) do |form| %>
                    <div class="field">
                        <div class="ui fluid icon input">
                            <%=  form.text_field :body %>
                            <%= form.button '<i class="bordered inverted red icon edit"></i>'.html_safe %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
